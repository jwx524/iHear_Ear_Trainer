<view class="line" catchtap="anscommon" >
  <button wx:if="{{id!=4}}" class="btncommon" id="delete" bindtap="ansdelete"><text>删除</text></button>
  <button wx:if="{{id!=4}}" class="btncommon" id="cancel" bindtap="anscancel"><text>取消</text></button>
  <button wx:if="{{currentIndex!=4}}" class="btncommon" id="confirm" bindtap="ansconfirm"><text>确定</text></button>
  <button wx:if="{{currentIndex==4}}" class="btncommon" catchtap="submit">提交</button>
