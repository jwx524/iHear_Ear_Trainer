<cu-custom bgColor="bg-misty-blue" isBack="{{true}}">
	<view slot="content">iHear视唱练耳助手</view>
</cu-custom>

<view class = "container bg" style="height:{{scrollheight}}px;width:{{scrollwidth}}px">
<text style="">detail id: {{id}}</text>
<!-- <input class="ansstr" type="text" disabled='true' placeholder="{{ansstr}}" placeholder-style="color:#000"/> -->
<view wx:for="{{testmusic}}" wx:if="{{id!=4}}">
    <input wx:if="{{index==currentIndex}}" class="ansstr" type="text" disabled='true' placeholder="{{item.myans}}" placeholder-style="color:#000"/>
</view>
<view class="line std" wx:if="{{id!=4}}">
  <image src="{{ifplaystd?'/images/pause.png':'/images/start.png'}}" class='music' catchtap='playMusicStd'></image>
  <text class="stdtag">标准音</text>
</view>


<swiper class="swp"current="{{currentIndex}}" indicator-dots="{{true}}" style="height:150rpx;width:{{scrollwidth*0.75}}px" bindchange="change">
  <swiper-item wx:for="{{testmusic}}" wx:key="index" >
    <image src="{{item.ifplay?'/images/pause.png':'/images/start.png'}}" class='music' catchtap='playMusic'></image>
  </swiper-item>
</swiper>


<view class="line arrset">
<view class="{{currentIndex==0?'arrowadvfirst':'arrowadv'}}" catchtap="{{currentIndex==0?'':'prev'}}"></view><view class="{{currentIndex==4?'arrowlast':'arrow'}}" catchtap="{{currentIndex==4?'':'next'}}"></view>
</view>

<view class="line ansshow"></view>

<view class="lower">
<view wx:if="{{id==0}}" id="0">
<view class="line">
  <button wx:for="{{btn0}}"  wx:key="id" wx:if="{{index<7}}" class="btn0" catchtap="ans" data-id="{{item}}">
    <text>{{item}}</text>
  </button>
</view>
