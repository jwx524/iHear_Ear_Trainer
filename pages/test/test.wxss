page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.background {
  position:fixed; 
  background-size:cover;
  z-index: -1;
  background-color: #f0f6fd;
}

.vertical-line {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.line {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  text-align: left;
}

.head {
  margin-left: 10rpx;
  letter-spacing: 10rpx;
  font-size: 60rpx;
  color: #123168;
}

.div {
  margin-top: 5rpx;
  height: 2rpx;
  width: 46%;
  background-color: #123168;
}

.subtitle {
  margin-left: 10rpx;
  margin-top: 5rpx;
  letter-spacing: 5rpx;
  font-size: 34rpx;
  color: #3a517a;
}

.swipe-select-text {
  position:fixed; 
  bottom: 100rpx;
  left: -66rpx;
  z-index: -1;
  height: 40vh;
  color: #acacac;
  font-size: 36rpx;
  letter-spacing: 5rpx;
  writing-mode: vertical-rl;
  margin-top: 50rpx;
}

.tower-swiper .tower-item {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 80rpx - 150rpx);
  z-index: var(--index);
}

text{
  width: 290rpx;
  height: 290rpx;
  display: flex;
  align-items:center;
  justify-content: center;
}