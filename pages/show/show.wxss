}

.correct-words {
  color: #396caf;
  font-size: 58rpx;
  font-weight: 400;
  letter-spacing: 5rpx;
  margin-bottom: 20rpx;
}

.num-words {
  color: #396caf;
  font-size: 100rpx;
  font-weight: bolder;
  margin-right: 20rpx;
}

.ti-words {
  color: #396caf;
  font-size: 34rpx;
  margin-top: 30rpx;
}

.wrong-words {
  color: #adaeae;
  font-size: 36rpx;
  letter-spacing: 8rpx;
  margin-left: 60rpx;
}

.div {
  background: #eee;
  height: 2rpx;
  width: 90vh;
  margin-top: 20rpx;
}

.music {
  height: 60rpx;
