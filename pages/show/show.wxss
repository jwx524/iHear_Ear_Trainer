/* pages/show/show.wxss */
page {
  background: #fff;
  font-family: "Microsoft YaHei";
}

.background {
  width: 100%;
  position: fixed;
  background-size: cover;
  z-index: -1;
}

.bg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.line {
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.line2 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.line2 {
  display: flex;
