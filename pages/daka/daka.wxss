/* pages/Calendar/Calendar.wxss */
/* 打卡日历 */
page{
  background-color: #fff;
}

.background {
  width: 100%;
  position:fixed; 
  background-size:cover;
  z-index: -1;
}

.all{
  margin-top: 20rpx;
}

.all .bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 20rpx;
  padding: 0rpx 30rpx 10rpx 30rpx;
}

.all .date {
  color: #fff;
  font-size: 50rpx;
  font-family: "PMingLiU";
  font-weight: bold;
}

.all .btns {
  display: flex;
  padding-top: 5rpx;
}

.all .bar image{
  width: 65rpx;
  height: 65rpx;
}

.calendar {
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0px 2px 6px rgb(213, 212, 212);
  background-color: #fff;
}

.calendar .week{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  margin: 20rpx;
  border-radius: 10px;
}

.calendar .days{
  margin: 20rpx;
  padding: 10rpx;
  border-radius: 10px;
}

.all .columns{
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}

.all .columns .rows{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.all .columns .rows .cell{
  width: 80rpx;
  height: 84rpx;
  margin: 3rpx;
  text-align: center;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 32rpx;
}

.check {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size:32rpx;
  border-radius: 10rpx;
  background-color: #ecf5ff;
  height: 100%;
  width: 90vw;
  padding: 20rpx;
  margin-left: 38rpx;
  margin-top: 40rpx;
}

.check .texts {
  color: #4b8dd8;
}

.check .img {
  height: 40rpx;
  width: 40rpx;
}

.count{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 20rpx;
  margin: 20rpx, 30rpx;
}

.count .daynumber{
  display: flex;
  align-items: center;
  justify-content: center;

}

.count .daynumber .day{
  display: flex;
  margin-top: 100rpx;
  font-family: "Microsoft JhengHei";
  font-size: 34rpx;
  color: #96c5fc;
}

.count .daynumber .number{
  padding-top: 10rpx;
  color: #96c5fc;
  font-size: 160rpx;
  font-weight: bolder;
  font-family: "Microsoft JhengHei";
}

.count text{
  margin: 10rpx;
}

.calendarSign{
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.calendarSign .incomplete {
  display: inline-flex;
	align-items: center;
	justify-content: center;
  padding: 0 40rpx;
  height: 110rpx;
  width: 90vw;
  border-radius: 70rpx;
  font-size: 36rpx;
  letter-spacing: 5rpx;
  border: 0;
  color: rgb(184, 182, 182);
  background-color: #4b8dd8;
  box-shadow: 0px 4px 5px #4b8dd8b4;
}

.calendarSign .incomplete::after {
  border: 0;
}

.calendarSign .complete {
  display: inline-flex;
	align-items: center;
	justify-content: center;
  padding: 0 40rpx;
  height: 110rpx;
  width: 30%;
  border-radius: 70rpx;
  font-size: 36rpx;
  letter-spacing: 5rpx;
  border: 0;
  color: #ffffff;
  background-color: #91c2fa;
  box-shadow: 0px 4px 5px #91c2fabd;
}

.calendarSign .complete::after {
  border: 0;
}

.calendarSign .finished {
  display: inline-flex;
	align-items: center;
  justify-content: center;
  margin: 10rpx;
  padding: 0 40rpx;
  height: 110rpx;
  border-radius: 70rpx;
  font-size: 36rpx;
  letter-spacing: 5rpx;
  border-width: 3rpx;
  border-style: solid;
  border-color: #5a9ffa;
  color: #5a9ffa;
  background-color: transparent;
}