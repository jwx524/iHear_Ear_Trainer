page {
  background-color: #fff;
}

.background {
  width: 100%;
  position: fixed;
  background-size: cover;
  z-index: -1;
  background-color: #fff;
}

.sign-in {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
  font-size: 36rpx;
  height: 100rpx;
  border-radius: 70rpx;
  border-width: 4rpx;
  background-color: transparent;
  border-style: solid;
  color: #fff;
  border-color: #fff;
}

.userinfo {
  height: 400rpx;
  display: flex;
  justify-content: space-around;
  overflow: hidden;
  position: relative;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: 160rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  font-weight: bolder;
  display: flex;
  font-size: 70rpx;
  letter-spacing: 10rpx;
  margin-left: 10rpx;
}


.functionlist {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: relative;
}

.functitle {
  letter-spacing: 10rpx;
  font-size: 33rpx;
  margin: auto;
  padding-right: 20rpx;
}

.arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #3865b7;
  border-right: 2px solid #3865b7;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-right: 60rpx;
}

.icon {
  height: 80rpx;
  width: 80rpx;
  margin-left: 60rpx;
  padding: 10rpx;
}

.btn-layout {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

