.button-hover {
  background: #f7f7f7;
}

.i-progress {
  display: inline-flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 90%;
  font-size: 12px;
  position: relative
}

.i-progress-outer {
  display: inline-block;
  width: 100%;
  margin-right: 0;
  padding-right: 0;
  box-sizing: border-box
}

.i-progress-inner {
  display: inline-block;
  width: 100%;
  background-color: #fea9a9;
  border-radius: 100px;
  vertical-align: middle
}

.i-progress-bg {
  border-radius: 100px;
  background-color: #57fa60;
  transition: all .2s linear;
  position: relative
}

.i-progress-text {
  display: inline-block;
  margin-left: 30rpx;
  margin-bottom: 5rpx;
  text-align: left;
  font-size: 28rpx;
  vertical-align: middle
}